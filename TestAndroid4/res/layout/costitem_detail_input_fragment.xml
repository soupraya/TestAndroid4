<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc" />

        <EditText
            android:id="@+id/costItem_desc"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="#FFFF0000"
            android:textSize="13sp" >
        </EditText>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_numberOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item cost:" />

        <EditText
            android:id="@+id/costItem_numberOfItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:inputType="number"
            android:textColor="#FFFF0000"
            android:textSize="13sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_UnitCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of items:" />

        <EditText
            android:id="@+id/costItem_UnitCost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:inputType="number"
            android:textColor="#FFFF0000"
            android:textSize="13sp" >
        </EditText>
    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <Button
        android:id="@+id/save_costItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_costItem" />
    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/text_TotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost:" />
        <TextView
            android:id="@+id/costItem_TotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>